<li>
  <p><%= task.title %></p>
  <div class="task-option">
    <% if !task.activated? %>
      <%= link_to "done", task_activation_path(task.id), method: :patch %>
    <% else %>
      <%= link_to "undone", task_activation_path(task.id), method: :patch %>
    <% end %>
    <%= link_to "edit", edit_task_path(task.id) %>
    <%= link_to "delete", task, method: :delete,
                                data: { confirm: "You sure?" }  %>
  </div>
</li>